<% content_for :title do %>Single device data<% end %>
<% content_for :head do %>
<% end %>
<% content_for :description do %>Shows the data from a single device<% end %>

<ul class="nav nav-tabs">
  <li role="presentation"><a href="/devices">Map</a></li>
  <li role="presentation" class="active"><a href="#">Device readings</a></li>
</ul>
<div id="container" style="width:100%; height:400px;"></div>
<% begin %>
<h3>Device <%= @device.id %> Readings</h3>
  <p>This device has the following readings:</p>
  <table class="table table-striped readings-index">
    <tr>
      <th>
        ID
      </th>
      <th>
        Location (lat, long)
      </th>
      <th>
        Humidity
      </th>
      <th>
        Temperature
      </th>
      <th>
        Pressure
      </th>
      <th>
        Created at
      </th>
    </tr>
    <% @device.readings.each do |reading| %>
      <tr>
        <td>
          Reading <%= reading.id %>
        </td>
        <td>
          <%= "(#{reading.lat}, #{reading.long})"%>
        </td>
        <td>
          <%= reading.hum %>
        </td>
        <td>
          <%= reading.temp %>
        </td>
        <td>
          <%= reading.pres %>
        </td>
        <td>
          <%= reading.created_at.to_formatted_s(:short)  %>
        </td>
      </tr>
    <% end %>
  </table>
<% rescue %>
  Error occurred.
<% end %>

<%= javascript_tag do%>
  window.dates = [];
  <% @dates.each do |date| %>
    var dateStr = "<%= date.to_formatted_s(:iso8601)%>";
    window.dates.push(Date.parse(dateStr));
  <% end %>
  window.startDate = window.dates[0];
  console.log(window.startDate);
<%end%>

<script type="text/javascript">
  // Data retrieved from http://vikjavev.no/ver/index.php?spenn=2d&sluttid=16.06.2015.
$(function () {
    Highcharts.chart('container', {
        chart: {
            type: 'spline'
        },
        title: {
            text: 'Air humidity'
        },
        subtitle: {
            text: 'Displays data from Device <%= @device.id %>'
        },
        xAxis: {
            type: 'datetime',
            labels: {
                overflow: 'justify'
            }
        },
        yAxis: {
            title: {
              text: 'Air Humidity (%)'
            },
            minorGridLineWidth: 0,
            gridLineWidth: 0,
            alternateGridColor: null,
            plotBands: [{ // Green
                from: 0.3,
                to: 50,
                color: 'rgba(153, 255, 51, 0.3)',
                label: {
                    text: 'Green zone',
                    style: {
                        color: '#606060'
                    }
                }
            }, { // Yellow
                from: 50,
                to: 75,
                color: 'rgba(255, 255, 153, 0.4)',
                label: {
                    text: 'Yellow zone',
                    style: {
                        color: '#606060'
                    }
                }
            }, { // Red
                from: 75,
                to: 100,
                color: 'rgba(255, 51, 0, 0.2)',
                label: {
                    text: 'Red zone',
                    style: {
                        color: '#606060'
                    }
                }
            }]
        },
        tooltip: {
            valueSuffix: ' m/s'
        },
        plotOptions: {
            spline: {
                lineWidth: 4,
                states: {
                    hover: {
                        lineWidth: 5
                    }
                },
                marker: {
                    enabled: false
                },
                pointInterval: 600000, // one minute
                pointStart: window.startDate
                // pointStart: Date.UTC(2015, 4, 31, 0, 0, 0)
            }
        },
        series: [{
            name: 'Air Humidity',
            data: <%= @humidities.map(&:to_f) %>
        }],
        navigation: {
            menuItemStyle: {
                fontSize: '10px'
            }
        }
    });
});
</script>
